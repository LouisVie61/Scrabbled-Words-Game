{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build SDL3 App",
      "type": "shell",
      "command": "g++",
      "args": [
        "-I${workspaceFolder}/SDL3/SDL3-3.2.16/x86_64-w64-mingw32/include",
        "-I${workspaceFolder}/SDL3_image/SDL3_image-3.2.4/x86_64-w64-mingw32/include",
        "-I${workspaceFolder}/SDL3_ttf/SDL3_ttf-3.2.2/x86_64-w64-mingw32/include",
        "-L${workspaceFolder}/SDL3/SDL3-3.2.16/x86_64-w64-mingw32/lib",
        "-L${workspaceFolder}/SDL3_image/SDL3_image-3.2.4/x86_64-w64-mingw32/lib",
        "-L${workspaceFolder}/SDL3_ttf/SDL3_ttf-3.2.2/x86_64-w64-mingw32/lib",
        "-std=c++17",
        "main.cpp",
        "src/Core/Game.cpp",
        "src/Core/Board.cpp",
        "src/Core/Tile.cpp",
        "src/Core/Player.cpp",
        "src/Core/Dictionary.cpp",
        "src/UI/GameRenderer.cpp",
        "-lSDL3",
        "-lSDL3_image",
        "-lSDL3_ttf",
        "-o",
        "main.exe"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    }
  ]
}
